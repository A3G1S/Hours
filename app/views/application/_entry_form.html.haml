.new_entry_wrapper
  %h2= form_title
  = simple_form_for(@entry) do |f|
    = f.error_notification

    - if @entrytype == "milage"
      = f.association :project, required: true, collection: Project.unarchived.by_name, label: false, placeholder: t("entries.index.project")
      / needs to change to miles entry after model change:
      = f.input :hours, required: true, as: :integer, label:false, placeholder: "miles"
      = f.input :date, required: true, as: :string, input_html: { value: (@entry.date || DateTime.current).strftime("%d/%m/%Y"), id: "datepicker"}, label: false
    - else
      = f.association :project, required: true, collection: Project.unarchived.by_name, label: false, placeholder: t("entries.index.project")
      = f.association :category, required: true, collection: Category.by_name, label: false, placeholder: t("entries.index.category")
      = f.input :hours, required: true, label: false, placeholder: t("entries.index.hours")
      = f.input :date, required: true, as: :string, input_html: { value: (@entry.date || DateTime.current).strftime("%d/%m/%Y"), id: "datepicker"}, label: false
    .taggable
      = f.input :description, input_html: { data: { data: Tag.list }, autocomplete: :off }, label: false, autocomplete: "off", placeholder: t("entries.index.description")
      %span.background-highlighter
    = f.button :submit, data: { disable_with: t("loader.saving") }
      
  -if @entrytype == "milage"
    = link_to "hours entry", :subdomain_root
  -else
    = link_to "milage entry", milage_entry_path