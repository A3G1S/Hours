%table.entries
  %th
    %tr
      %td
        %input{ type: "checkbox", "data-project-id" => project.id, class: "bill-project" }
        = t("billables.table.billed")
      %td= t("billables.table.date")
      %td= t("billables.table.category")
      %td= t("billables.table.hours")
      %td= t("billables.table.user")
  - entries.billable.each do |entry|
    %tr.info-row
      %td=billable_entry_checkbox(entry)
      %td=l(entry.date)
      %td=entry.category.name
      %td.center= entry.hours
      %td
        = link_to entry.user do
          = entry.user.full_name
