%table.entries-table
  %thead
    %tr
      %th= t("entries.index.date")
      %th= t("entries.index.project")
      %th.center= t("entries.index.hours")
      %th.hide-for-mobile= t("entries.index.category")
      %th.hide-for-mobile= t("entries.index.description")
      - if @user == current_user
        %th.right
      %th.right.hide-for-mobile
  %tbody
    - @hours_entries.each do |entry|
      - localized_cache cache_key_for_current_user(entry) do
        %tr.info-row
          %td= l(entry.date)
          %td= link_to entry.project.name, entry.project
          %td.center= entry.value
          %td.hide-for-mobile
            %span.color{:style => "background-color:#{entry.category.name.pastel_color};"}
            = entry.category.name
          %td.hide-for-mobile.table-description
            = sanitize autolink_tags(entry.description)
          - if @user == current_user
            %td.right
              = link_to t('entries.index.edit'), edit_entry_path(entry, :entrytype => "hours")
              |
              = link_to t('entries.index.delete'), entry_path(entry, :entrytype => "hours") , method: :delete, class: "destroy", data: { confirm: t(:confirm) }
          %td.right= link_to t('entries.index.changes'), entry_audits_path(entry, :entrytype => "hours") if entry.audits.any?
= paginate @hours_entries
