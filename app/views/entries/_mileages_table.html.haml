%table.entries-table
  %thead
    %tr
      %th= t("entries.index.date")
      %th= t("entries.index.project")
      %th.center= t("entries.index.mileages")
      %th
      %th
      - if @user == current_user
        %th.right
      %th.right.hide-for-mobile
  %tbody
    - @mileages_entries.each do |entry|
      - localized_cache cache_key_for_current_user(entry) do
        %tr.info-row
          %td= l(entry.date)
          %td= link_to entry.project.name, entry.project
          %td.center= entry.value
          %td
          %td
          - if @user == current_user
            %td.right
              = link_to t('entries.index.edit'), edit_entry_path(entry, :entrytype => "mileages")
              |
              = link_to t('entries.index.delete'), entry_path(entry, :entrytype => "mileages") , method: :delete, class: "destroy", data: { confirm: t(:confirm) }
          %td.right= link_to t('entries.index.changes'), entry_audits_path(entry, :entrytype => "mileages")  if entry.audits.any?
