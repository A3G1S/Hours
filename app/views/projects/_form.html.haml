= simple_form_for(@project) do |f|
  = f.error_notification
  .form-inputs
    = f.input :name, required: true, autofocus: true
    = f.association :client, required: false, collection: Client.by_name, label: false, placeholder: t("project.form.client")
    = f.label :billable
    = f.input :billable, as: :boolean, label: false
    = f.button :submit, data: { disable_with: t("loader.saving") }
