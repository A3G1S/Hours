= simple_form_for(@project) do |f|
  = f.error_notification
  .form-inputs
    = f.input :name, required: true, autofocus: true
    = f.association :client, required: false, collection: Client.by_name, label: false, placeholder: t("project.form.client"), include_blank: t("project.form.no_client")
    = f.input :description, as: :text, input_html: { rows: 5 }
    = f.label :billable
    = f.input :billable, as: :boolean, label: false
    = f.label :archived
    = f.input :archived, as: :boolean, label: false
    = f.input :budget, as: :integer
    = f.button :submit, data: { disable_with: t("loader.saving") }
